#    @WARNING@
#=======================================================================
include Makefile_@DIM@
include Makefile_@GAS@
include Makefile_@EOS@
#===
#  generic Makefile(.in)
#
#-------------------  object files  ------------------------------------
CORE_OBJ =   add1_2name.o \
	data_output.o \
	eigensystems_InConsVars.o \
	eigensystems_InPrimVars.o \
	init_dt.o \
	integrate_1step.o \
	lr_states.o \
	main.o \
	printd.o \
	roe_fluxes.o \
	set_bval_arrays.o \
	set_ghost_zones.o 
#-----------------------------------------------------------------------
OBJ_1 = binary_dump.o \
	init_grid_block.o \
	shkset.o \
	twoibw.o \
	shu_osher.o 
#-----------------------------------------------------------------------
OBJ_2 = binary_dump_2d.o \
	init_grid_block_2d.o
#-----------------------------------------------------------------------
OBJ_MHD_1 = linear_wave.o
#-----------------------------------------------------------------------
OBJ = $(CORE_OBJ) $(OBJ_@DIM@) $(OBJ_@GAS@_@DIM@) 
#-------------------  macro definitions  -------------------------------
EXEDIR = ../bin/
#
CC  = @CC@
OPT = -O3
GNUFLAGS = -Wall -W -ansi -pedantic
CFLAGS = $(OPT) $(GNUFLAGS)
LDR = @CC@
LIB = -lm

#--------------------  implicit rules  ---------------------------------
.c.o:
	${CC} ${CFLAGS} -c $<
#---------------------  targets  ---------------------------------------
compile: ${OBJ}
	${LDR} -o ${EXEDIR}athena ${OBJ} ${LIB}
#-----------------------------------------------------------------------
help:
	@echo This is ATHENA with DIM=$(DIM)
	@echo Type 'make compile' to generate ATHENA executable
	@echo Type 'make clean'   to remove *.o files
#-----------------------------------------------------------------------
.PHONY: clean
clean:
	rm -f *.o Makedepend
	touch Makedepend
#-----------------------------------------------------------------------
.PHONY: distclean
distclean:
	rm -f *.o *~ Makedepend
	touch Makedepend
#-----------------------------------------------------------------------
depend:
	rm -f Makedepend
	${CC} -M ${OPTS} ${OBJ} > Makedepend

include Makedepend
